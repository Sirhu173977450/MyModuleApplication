<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/notification_layout"
    android:padding="8dp" >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/notification_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
             android:id="@+id/notification_artist"
            android:textColor="@color/gray_white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="50dp">
        
        <ImageView android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/notification_pre"
            android:background="@drawable/icon_notification_pre"/>
        <ImageView android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/notification_next"
            android:background="@drawable/icon_notification_next"/>
    </LinearLayout>
</LinearLayout>