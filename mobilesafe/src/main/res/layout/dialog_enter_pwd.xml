<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:padding="3dip"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:src="@drawable/dialog_title_default_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="密码输入对话框"
            android:textSize="17sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_pwd"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword" />


    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dialog_ok"
            android:textSize="15sp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textColor="#aaffffff"
            android:layout_weight="1"
            android:background="@drawable/dg_confirm_selector"
            android:text="确定" />

        <Button
            android:textSize="15sp"
            android:id="@+id/bt_dialog_cancle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/dg_cancel_selector" />
    </LinearLayout>

</LinearLayout>