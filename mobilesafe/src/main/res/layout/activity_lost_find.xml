<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/text_title"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            style="@style/text_content"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_lostfind_number"
            style="@style/text_content"
            android:layout_alignParentRight="true"
            android:text="number" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33000000" >
    </View>

    <RelativeLayout
        android:onClick="changeProtectStatus"
        android:background="@drawable/dg_cancel_selector"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            style="@style/text_content"
            android:text="防盗保护的状态" />

        <ImageView
            android:id="@+id/iv_lostfind_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33000000" >
    </View>

    <RelativeLayout
        android:clickable="true"
        android:onClick="reloadSetupUI"
        android:background="@drawable/dg_cancel_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            style="@style/text_content"
            android:text="重新进入设置向导" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44000000"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="功能介绍"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            style="@style/text_content"
            android:drawableLeft="@drawable/dialog_title_default_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="GPS追踪 #*location*#" />

        <TextView
            style="@style/text_content"
            android:drawableLeft="@drawable/dialog_title_default_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="播放报警音乐 #*alarm*#" />

        <TextView
            style="@style/text_content"
            android:drawableLeft="@drawable/dialog_title_default_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="远程删除数据 #*wipedata*#" />

        <TextView
            style="@style/text_content"
            android:drawableLeft="@drawable/dialog_title_default_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="远程锁屏 #*lockscreen*#" />
    </LinearLayout>

</LinearLayout>