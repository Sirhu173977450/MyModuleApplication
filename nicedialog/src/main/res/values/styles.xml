<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="NiceDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nice_bottom_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nice_bottom_exit_anim</item>
    </style>

    <style name="RightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nice_right_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nice_right_exit_anim</item>
    </style>

    <style name="LeftAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nice_left_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nice_left_exit_anim</item>
    </style>

    <style name="TopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nice_top_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nice_top_exit_anim</item>
    </style>

    <style name="TargetSettingStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TargetSettingEditText" parent="Theme.AppCompat.Light">
         <item name="colorControlNormal">#DCDCDC</item>
         <item name="colorControlActivated">#666666</item>
    </style>




</resources>
